<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">

    <TextView
        android:id="@+id/trasnportnumber"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageTransport"
        android:layout_toRightOf="@+id/imageTransport"
        android:gravity="center"
        android:text="1"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>


    <ImageView
        android:id="@+id/imageTransport"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/busnormal" />

    <TextView
        android:id="@+id/route"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/trasnportnumber"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/trasnportnumber"
        android:layout_toRightOf="@+id/trasnportnumber"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:text="TextView"
        android:textColor="@color/Elements" />

    <TextView
        android:id="@+id/time"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/route"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/route"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/route"
        android:text="Завтра" />

</RelativeLayout>